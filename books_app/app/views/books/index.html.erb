<p id="notice"><%= notice %></p>

<h1><%= t '.title' %></h1>

<table>
  <thead>
    <tr>
      <th><%= t '.book_title' %></th>
      <th><%= t '.book_memo' %></th>
      <th><%= t '.book_author' %></th>
      <th><%= t '.book_pic' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('.detail'), book %></td>
        <td><%= link_to t('.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('.delete'), book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @books %>

<br>

<%= link_to t('.add_new'), new_book_path %>
